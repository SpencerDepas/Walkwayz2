<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="320dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:text="Add Hazordus location"
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/place_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:hint="Place tittle"
        android:textColor="@color/secondary_text"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/place_detail_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:hint="Place details"
        android:textColor="@color/primary_text"
        android:textSize="17sp" />


    <Button
        android:id="@+id/dialogButtonOK"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="OK"
        android:textColor="@color/colorAccent" />


    <Button
        android:id="@+id/dialogButtonCancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/dialogButtonOK"
        android:text="Cancel"
        android:textColor="@color/colorAccent" />


</RelativeLayout>