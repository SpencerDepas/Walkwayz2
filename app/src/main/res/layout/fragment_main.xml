<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.clearfaun.spencerdepas.walkwayz.Fragment.MainFragment">

    <ProgressBar
        android:id="@+id/main_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />


    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/emrgcy_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/emt"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/icon_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emrgcy_icon"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:text="We'v got your back"
        android:textColor="@color/white"
        android:textSize="@dimen/fragment_main_emergency_icon_subtext_text_size" />


    <include
        layout="@layout/view_fragment_main_emergency_section"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
